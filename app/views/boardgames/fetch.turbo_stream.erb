<%= turbo_stream.update :item do %>
  <% if params.dig(:boardgame, :destiny) == 'thing' %>
    <%= render "boardgames/results/thing", boardgame: @response %>
  <% end %>

  <% if params.dig(:boardgame, :destiny) == 'hot_items' %>
    <%= render "boardgames/results/hot_items", items: @response %>
  <% end %>
<% end %>
